generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                    String           @id @default(uuid())
  email                 String           @unique
  username              String?          @unique
  firstName             String?
  lastName              String?
  avatar                String?
  intraId               Int?             @unique
  googleId              String?          @unique
  suiWalletAddress      String?
  profileId             String?          // On-chain UserProfile object ID
  role                  String           @default("USER")
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  realWalletAddress     String?          // zkLogin wallet address
  externalWalletAddress String?          // External wallet (Slush, Sui Wallet vb.)
  nftAchievements       NFTAchievement[]

  // Stats - Backend'de takip edilen istatistikler
  tasksCreated      Int              @default(0)
  tasksParticipated Int              @default(0)
  votesCount        Int              @default(0)
  donationsCount    Int              @default(0)
  totalDonated      BigInt           @default(0)  // MIST cinsinden
  reputationScore   Int              @default(0)
}

model NFTAchievement {
  id              String   @id @default(uuid())
  userId          String
  nftObjectId     String?  @unique
  achievementType String
  taskId          String?
  metadataUrl     String?
  imageUrl        String?
  createdAt       DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id])
}
